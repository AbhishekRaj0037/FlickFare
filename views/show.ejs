    </style>

    <div class="row">
        <div class="col-6">
            <div id="showCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                   
                            <img src="<%= show.image%>" class="d-block w-100"  >
                    


                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h1 class="card-title">
                        <%= show.title%>
                    </h1>
                    <p class="card-text">
                      <b>Certificate: </b><%=show.certificate%>
                  <br>
                    <b>Language: </b><%=show.language%>
                    <br>
                    <b>Duration: </b><%=show.duration%>
                    <br>
                    <b>Director: </b><%=show.director%>
                    <br>
                    <b>Cast: </b><%=show.cast%>
                </p>
                    <p class="card-text">
                        <%= show.description%>
                    </p>
                      <span><%=show.genre[0]%></span> 
                    </div>                      
                    
                </ul>
            </div>

        </div>
        <div class="col-6">
            <% if(currentUser){ %>
                <h2>Book Tickets</h2>
                <form action="/show/<%=show._id%>/seats/" method="POST" class="mb-3 validated-form"
                    novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="body">Select a Date -></label>
                        <% let leftInterval=Math.max(show.inDate,new Date()) %>
                        <%leftInterval=new Date(leftInterval)%>
                        <% let rightInterval=show.inDate %>
                        <% rightInterval.setDate(rightInterval.getDate() + 6) %>
                        <input type="date" min=<%=leftInterval.toISOString().split('T')[0]  %> max=<%=rightInterval.toISOString().split('T')[0] %> value=<%= new Date().toISOString().split('T')[0] %>  id="date" name="date" required>
                    </div>
                    <button class="btn btn-sm btn-danger">Book Now</button>
                </form>
                <h2>Leave a Review</h2>
                <form action="/show/<%=show._id%>/reviews/" method="POST" class="mb-3 validated-form"
                    novalidate>
                    <!-- <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                    </div> -->
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% } %>
                    <% for(let review of show.reviews) { %>
                        <div class="card mb-3 ">
                            <div class="card-body">
                              <h5>
                              <b><p class="card-text"><%=review.author.username%>
                              </p></b>
                            </h5>
                                <p class="starability-result" data-rating="<%=review.rating%>">
                                    Rated: <%=review.rating%> stars
                                </p>
                              
                                <p class="card-text">Review: <%= review.body %>
                                </p>
                                <% if( currentUser && review.author.equals(currentUser._id)) {%>
                                    <form
                                        action="/show/<%=show.id%>/reviews/<%=review.id%>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>